.row-fluid
  %h2
    All Leads

#lead-controls.row-fluid
  = will_paginate @leads, :class => 'pagination pagination-small'
  = form_tag @lead, :class => "navbar-search pull-right", :method => :get do
    = text_field_tag :name, nil, :class => "search-query", :placeholder => "Search Leads"

%ul.nav.nav-list.table-striped
  %li#leads_header
    .navbar
      .navbar-inner
        .row-fluid
          .span1 <span>Lead</span>
          .span2 <span>Name</span>
          .span1 <span>Phone #</span>
          .span2 <span>Email</span>
          .span1 <span>Zip Code</span>
          .span1 <span>Interest</span>
          .span2 <span>Status</span>
          .span1 <span>Updates</span>
          .span1 <span>Save</span>

  = render 'leads/leads'

.label.label-info= page_entries_info @leads
