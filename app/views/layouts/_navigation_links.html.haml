= link_to 'About', about_path, class: 'brand'
- if signed_in?
  %li= link_to "Users", users_path, class: 'brand'
  %li#fat-menu.dropdown
    %a.dropdown-toggle{:href => "#", :data => {:toggle => "dropdown"}}
      Account
      %b.caret
    %ul.dropdown-menu
      %li= link_to "Profile", current_user
      %li= link_to "Settings", '#'
      %li.divider
      %li= link_to "Sign out", signout_path, method: "delete"
- else
  %li= link_to "Sign in", signin_path, class: 'brand'
