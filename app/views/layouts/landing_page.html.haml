!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= full_title(yield(:title))
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'DoorsNWindows'}"}
    = stylesheet_link_tag "landing_pages/application", media: "all", "data-turbolinks-track" => true
    = stylesheet_link_tag "application", "http://fonts.googleapis.com/css?family=Open+Sans:400italic,400,700"
    = stylesheet_link_tag "application", "http://fonts.googleapis.com/css?family=Patua+One"
    = csrf_meta_tags
    = render 'layouts/shim'
  %body
    -# application layout styled for Twitter Bootstrap 2.3
    %header
      = render 'landing_pages/header'
    %main{:role => "main"}
      %div{:class => container_class}
        .content{:id => params[:controller]}
          .row-fluid
            .span12
              = yield
        = debug(params) if Rails.env.development?
    = render 'landing_pages/footer'

    = javascript_include_tag "landing_pages/application", "data-turbolinks-track" => true
